<%= render "shared/header" %>
<div class="show-wrapper">
  <div class="left-section">
  <h1>ユーザー情報</h1>
  <p>ユーザー名: <%= current_user.username %></p>
  <p>Email: <%= current_user.email %></p>
  <p>生年月日: <%= current_user.date_of_birth %></p>
  <p>趣味: <%= current_user.hobbies_name %></p>
  <p>関心: <%= current_user.interests_name %></p>
  <p>キャラクター: <%= current_user.character_name %></p>
  <div class="edit-button-container">
  <%= link_to '編集', edit_user_registration_path, class: 'edit-button' %>
  
  </div>
  <div class="right-section">
    <div class="top-character-image">
      <%= image_tag @character.image_url, alt: @character.name %>
    </div>
  </div>
</div>   