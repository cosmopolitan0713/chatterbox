<%= render "shared/header" %>
<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      ユーザー情報入力
    </h1>
  </div>
  <%= render 'shared/error_messages', model: f.object %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">ユーザー名</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :username, class:"input-default", id:"username", placeholder:"例) furima太郎", maxlength:"40", autofocus: true  %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
    <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード(確認)</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
  </div>
 
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">生年月日</label>
      <span class="indispensable">任意</span>
    </div>
    <div class='input-birth-wrap'>
      <%= raw sprintf(
                  f.date_select(
                    :date_of_birth,
                    class:'select-birth', 
                    id:"date_of_birth",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
    </div>
    <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">趣味</label>
      <span class="indispensable">任意</span>
    </div>
    <%= f.collection_select(:hobbies_id, Hobbies.all, :id, :name, {}, {class:"hobbies-select"}) %>
     <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">関連事</label>
      <span class="indispensable">任意</span>
    </div>
    <%= f.collection_select(:interests_id, Interests.all, :id, :name, {}, {class:"hobbies-select"}) %>
    <%# キャラクター選択 %>
    <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">キャラクター選択</label>
      <span class="indispensable">必須</span>
    </div>
   <%= f.collection_select(:character_id, Character.all, :id, :name, {}, {class: "d-none", id: "character-select"}) %>
  </div>
  <div class="btn-group">
  <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    キャラクターを選択してください
  </button>
  <div class="dropdown-menu">
    <% Character.all.each do |character| %>
      <button class="dropdown-item character-option" data-value="<%= character.id %>"><%= character.name %></button>
    <% end %>
  </div>
</div>
    <%# ここまで %>
  <div class='register-btn'>
    <%= f.submit "会員登録" ,class:"register-red-btn" %>
    
  </div>
</div>
<% end %>

