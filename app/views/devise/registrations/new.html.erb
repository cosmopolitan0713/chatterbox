<%= render "shared/header" %>
<%= form_with model: @user, url: user_registration_path, local: true do |f| %>
<div class="form-wrap">
    <div class='left-section'>
      <h1 class="form-header-text">
        ユーザー情報入力
      </h1>
      <%= render 'shared/error_messages', model: f.object %>
      <div class="form-group">
        <div class="form-text-wrap">
          <label class="form-text">ユーザー名</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :username, class:"input-default" ,placeholder:"例) てすと太郎", maxlength:"40", autofocus: true %>
      </div>  
      <div class="form-group">
        <div class="form-text-wrap">
          <label class="form-text">メールアドレス</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :email, class:"input-default" ,placeholder:"PC・携帯どちらでも可" %>
      </div> 
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">パスワード</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
        <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">パスワード(確認)</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">生年月日</label>
          <span class="optional">任意</span>
        </div>
        <div class='input-birth-wrap'>
          <%= raw sprintf(
                      f.date_select(
                        :date_of_birth,
                        class:'select-birth', 
                        id:"date_of_birth",
                        use_month_numbers: true,
                        prompt:'--',
                        start_year: 1930,
                        end_year: (Time.now.year - 5),
                        date_separator: '%s'),
                      "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
        </div>
      </div>
      <div class="form-groups">  
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">趣味</label>
          <span class="optional">任意</span>
        </div>
        <%= f.select :hobbies_id, Hobbies.all.map { |h| [h.name, h.id] }, {}, class:'default-select' %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">関心事</label>
          <span class="optional">任意</span>
        </div>
        <%= f.select :interests_id, Interests.all.map { |i| [i.name, i.id] }, {}, class:'default-select' %>
      </div>
      </div>
    </div>
    <div class='right-section'>
      <div class="previews-item">
        <div id="previews"></div>
      </div>        
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">キャラクター</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.select :character_id, Character.all.map { |c| [c.name, c.id] },{}, class: 'default-select-c' ,id: 'user_character_id' %>
      </div>

    </div>
</div>
<div class='register-btn'>
  <%= f.submit "会員登録" ,class:"register-red-btn" %>    
</div>    
  <% end %>



