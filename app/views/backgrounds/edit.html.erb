<%= render "shared/header" %>
<div class="default-background-color">
<%= form_with(model: @user, url: background_path(current_user.background.id), method: :patch, class: 'background-form') do |f| %>
  <div class="background-group">
    <div class="background-list">
      <% @backgrounds.each do |background| %>
        <div class="background-items">
          <div class="background-item">
            <%= image_tag background.image_url, alt: background.name %>
          </div>
          <div class="background-radio">
            <%= f.radio_button :background_id, background.id, id: "radio-#{background.id}" %>
            <label for="radio-<%= background.id %>"><%= background.name %></label>
          </div>
        </div>  
      <% end %>
    </div>
  </div>
  

  <div class="background-submit">
    <%= f.submit '更新する', class: 'character-btn' %>
  </div>
<% end %>
</div>